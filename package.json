{
  "name": "khodkar-cli",
  "version": "1.1.0",
  "description": "A TypeScript CLI application that extracts business rules and logic from codebases for customer support knowledge bases",
  "main": "dist/index.js",
  "bin": {
    "khodkar": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "cli",
    "business-rules",
    "code-analysis",
    "customer-support",
    "knowledge-base",
    "typescript"
  ],
  "author": "zigbalthazar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dezh-tech/khodkar-cli.git"
  },
  "bugs": {
    "url": "https://github.com/dezh-tech/khodkar-cli/issues"
  },
  "homepage": "https://github.com/dezh-tech/khodkar-cli#readme",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.23",
    "@ai-sdk/openai-compatible": "^0.2.16",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@modelcontextprotocol/server-filesystem": "^2025.7.1",
    "@modelcontextprotocol/server-memory": "^2025.4.25",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@types/jsonwebtoken": "^9.0.10",
    "ai": "^4.0.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "isomorphic-git": "^1.32.2",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "langfuse-vercel": "^3.38.4",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "ora": "^8.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.7",
    "@types/diff-match-patch": "^1.0.36",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
